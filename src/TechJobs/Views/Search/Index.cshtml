<h1>@ViewBag.title</h1>

<form action="/Search/Results">
    <h2>Search by:</h2>

    <p>
        @foreach (KeyValuePair<string, string> column in ViewBag.columns)
        {
            <span>
                <input type="radio"
                       name="searchType"
                       id="@column.Key"
                       value="@column.Key"
                       checked="@(column.Key == ViewBag.searchType)" />
                <label for="@column.Key">@column.Value</label>

            </span>
        }
    </p>

    @ViewBag.searchType
    <p>
        <label for="searchTerm">Keyword:</label>
        <input type="text" name="searchTerm" id="searchTerm" />
    </p>

    <input type="submit" value="Search" />

</form>

<hr />

@if (ViewBag.jobs != null)
{

    <h3>@ViewBag.jobs.Count Result(s)</h3>

    @for (int i = 0; i < ViewBag.jobs.Count; i++)
    {
        <table class="job-listing">

            @foreach (KeyValuePair<string, string> job in ViewBag.jobs[i])
            {
                <tr>
                    <td>@UppercaseFirst(job.Key)</td>
                    <td><a asp-controller="Search" asp-action="Results" asp-route-searchType="@job.Key"
   asp-route-searchTerm="@job.Value">@job.Value</a></td>
                </tr>
            }
        </table>
    }

}
@functions 
{
    public static string UppercaseFirst(string s)
    {
        if (string.IsNullOrEmpty(s))
        {
            return string.Empty;
        }
        return char.ToUpper(s[0]) + s.Substring(1);
    }
}